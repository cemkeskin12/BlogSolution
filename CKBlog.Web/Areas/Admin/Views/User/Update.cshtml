@model CKBlog.Web.Areas.Admin.Models.UserUpdateModel

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="User" asp-action="Index">Makaleler</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="User" asp-action="Update">Güncelle</a></li>
</ol>


<form asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="row mt-2">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Temel Bilgiler
                </div>
                <div class="card-body">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="İsim" asp-for="FirstName" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Soyisim" asp-for="LastName" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="email" class="form-control" placeholder="Email Adresi" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card" style="height: 307px">
                <div class="card-header">
                    Not
                </div>
                <div class="card-body">
                    <p>
                        Şifre değiştirme gibi işlemleri sağ üstteki alana tıklayarak profilim kısmına gidip gerçekleştirebilirsiniz.
                    </p>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{

    <script src="~/Admin/RoleAddHelper.js"></script>
}
